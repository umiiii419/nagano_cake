<h4>商品詳細</h4>

<%= attachment_image_tag @item, :image, :fill, 150, 150 %>

<table>
  <tr>
    <td>商品名</td>
    <td><%= @item.name %></td>
  </tr>
  <tr>
    <td>商品説明</td>
    <td><%= @item.introduction %></td>
  </tr>
  <tr>
    <td>ジャンル</td>
    <td><%= @item.genre.name %></td>
  </tr>
  <tr>
    <td>税込価格(税抜価格)</td>
    <td><%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)</td>
  </tr>
  <tr>
    <td>販売ステータス</td>
    <td><%= @item.is_active ? '販売中' : '販売停止中' %></td>
  </tr>
</table>

<%= link_to "編集する", edit_admin_item_path(@item) %>
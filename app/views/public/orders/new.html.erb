<h4>注文情報入力</h4>
<%= form_with model:@order, url: orders_path, local:true do |f| %>

  <div>
    <p>支払方法</p>
    <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
  </div>
  <div>
    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
  </div>

  <div>
    <p>お届け先</p>
    <%= f.radio_button :selected_address, value="0" %>
    <%= f.label :selected_address, "ご自身の住所" %>
    <%= @customer.postal_code %>
    <%= @customer.address %>
    <%= @customer.name %>
  </div>
  <div>
    <%= f.radio_button :selected_address, value="1" %>
    <%= f.label :selected_address, "登録済住所から選択" %>
    <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :full_address), prompt: "住所を選択してください" %>
  </div>
  <div>
    <%= f.radio_button :selected_address, value="2" %>
    <%= f.label :selected_address, "新しいお届け先" %>

    <table>
      <tr>
        <th><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></th>
        <td><%= f.text_field :postal_code, autofocus: true %></td>
      </tr>
      <tr>
        <th><%= f.label :address, "住所" %></th>
        <td><%= f.text_field :address, autofocus: true, :size=>"60" %></td>
      </tr>
      <tr>
        <th><%= f.label :name, "宛名" %></th>
        <td><%= f.text_field :name, autofocus: true %></td>
      </tr>
    </table>
  </div>

  <%= f.submit '確認画面へ進む' %>

<% end %>

<h4>注文情報確認</h4>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
        <td><%= cart_item.amount %></td>
        <td><%= cart_item.subtotal.to_s(:delimited) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<table>
  <tbody>
    <tr>
      <th>支払い方法</th>
      <td><%= @order.payment_method_i18n %></td>
    </tr>
    <tr>
      <th>お届け先</th>
      <td>
        <p><%= @order.select_address %></p>
      </td>
    </tr>
  </tbody>
</table>



<table>
  <tbody>
    <tr>
      <td>送料</td>
      <td><%= @order.shipping_cost %></td>
    </tr>
    <tr>
      <td>商品合計</td>
      <td><%= @sum %></td>
    </tr>
    <tr>
      <td>請求合計</td>
      <td><%= @sum + @order.shipping_cost %></td>
    </tr>
  </tbody>
</table>


<%= form_with model: @order, url: order_thanks_path, local: true do |f| %>
      <%= f.submit "注文を確定する" %>
<% end %>


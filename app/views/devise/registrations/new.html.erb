<h2>新規会員登録</h2>

<table>
  <%= render "devise/shared/error_messages", resource: resource %>

  <tbody>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <tr>
      <div class="field">
        <td>名前</td>
        <td>(性)</td>
        <td><%= f.text_field :last_name, autofocus: true, :placeholder => "令和" %></td>
        <td>(名)</td>
        <td><%= f.text_field :first_name, autofocus: true, :placeholder => "道子" %></td>
      </div>
    </tr>

    <tr>
      <div class="field">
        <td>フリガナ</td>
        <td>(セイ)</td>
        <td><%= f.text_field :last_name_kana, autofocus: true, :placeholder => "レイワ" %></td>
        <td>(メイ)</td>
        <td><%= f.text_field :first_name_kana, autofocus: true, :placeholder => "ミチコ" %></td>
      </div>
    </tr>

     <tr>
      <div class="field">
        <td>メールアドレス</td>
        <td colspan="1"></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@example.com" %></td>
      </div>
    </tr>

      <tr>
      <div class="field">
        <td>郵便番号(ハイフンなし)</td>
        <td colspan="1"></td>
        <td><%= f.text_field :postal_code, autofocus: true, :placeholder => "0000000" %></td>
      </div>
    </tr>

    <tr>
      <div class="field">
        <td>住所</td>
        <td colspan="1"></td>
        <td colspan="3"><%= f.text_field :address, autofocus: true, :placeholder => "東京都渋谷区代々木神園町0-0", :size=>"60" %></td>
      </div>
    </tr>

    <tr>
      <div class="field">
        <td>電話番号(ハイフンなし)</td>
        <td colspan="1"></td>
        <td><%= f.text_field :telephone_number, autofocus: true, :placeholder => "0000000000" %></td>
      </div>
    </tr>

    <tr>
      <div class="field">
        <td>パスワード(６文字以上)</td>
          <td colspan="1"></td>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </div>
    </tr>

    <tr>
      <div class="field">
        <td>パスワード(確認用)</td>
        <td colspan="1"></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </div>
    </tr>

    <tr>
      <div class="actions">
        <td colspan="2"></td>
        <td><%= f.submit "新規登録" %></td>
      </div>
    </tr>
  <% end %>
  </tbody>

  <tfoot>
    
    <%= render "devise/shared/links" %>
  </tfoot>

</table>
<h3>商品一覧</h3><p>(全<%= @items.total_count %>件)</p>

<% @items.each do |item| %>
  <%= link_to item_path(item.id) do %>
    <%= attachment_image_tag item, :image, :fill, 150, 100 %></br>
  <% end %>
    <%= item.name %></br>
    <%= item.add_tax_price.to_s(:delimited) %></br>

<% end %>
<%= paginate @items %>
